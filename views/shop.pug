extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")


block content
    main
        .grid
            if prods.length > 0
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="https://cdn.pixabay.com/photo/2017/06/02/10/36/flower-2365910_960_720.jpg", alt="image")
                        .card__content
                            h2.product__price $19.99
                            p.product__description Lorem ipsum dolor, sit amet consectetur adipisicing elit. Possimus, ut porro similique, earum voluptatum quasi laborum facilis voluptas optio quia hic, cumque sint officiis quibusdam voluptates sapiente provident? Numquam, neque!
                        .card__actions
                            button.btn Add to cart
            else
                h1 Empty Baby